# Use the following form
# [lowercase character representing the command or flag]*
# Use unique mnemonics, which do not conflict with other mnemonics of the same type(flag or command) where possible.
# Feel free to submit a pr or issue suggesting mnemonics where they are missing. Make sure that the command is unused.
# Commands without mnemonics are marked with "- no mnemonic".
[alias]
        # [a]dd
        a = add
        ai = add --interactive
        ap = add --patch

        # [b]ranch
        b = branch

        # [c]ommit
        c = commit
        ca = commit --amend
        cm = commit --message
        cam = commit --amend --message

        # [d]iff
        d = diff
        ds = diff --staged

        # clon[e] - no mnemonic
        e = clone

        # con[f]ig - no mnemonic
        f = config
        fg = config --global

        # stas[h] - no mnemonic
        h = stash
        hl = stash list
        hm = stash --message

	# [l]og
	l = log

        # r[m] - no mnemonic
        m = rm

        # check[o]ut - no mnemonic
        o = checkout

        # [p]ush
        p = push
        pot = push origin tag # "push origin" by itself also works, but this is more explicit

        # [r]estore
        r = restore
        rs = restore --staged

        # [s]tatus
        s = status

        # [t]ag
        t = tag

        # p[u]ll - no mnemonic
        u = pull

